# Environment Configuration for ProjectForge

# Copy this file to .env and fill in your actual credentials

# Supabase Configuration
# Get these from your Supabase project settings
REACT_APP_SUPABASE_URL=your_supabase_project_url
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key

# Smart Contract Configuration
# Deploy the ProjectFunding.sol contract to Sepolia and add the address here
REACT_APP_CONTRACT_ADDRESS=your_deployed_contract_address_on_sepolia

# EmailJS Configuration
# Set up EmailJS service and templates, then add the IDs here
REACT_APP_EMAILJS_SERVICE_ID=your_emailjs_service_id
REACT_APP_EMAILJS_TEMPLATE_DONATION_RECEIVED=your_template_id_for_creator_notifications
REACT_APP_EMAILJS_TEMPLATE_DONATION_SENT=your_template_id_for_donor_confirmations
REACT_APP_EMAILJS_PUBLIC_KEY=your_emailjs_public_key

# Optional: Enhanced RPC providers for better performance
REACT_APP_INFURA_PROJECT_ID=your_infura_project_id
REACT_APP_ALCHEMY_API_KEY=your_alchemy_api_key

# Development/Debug settings
REACT_APP_DEBUG_EMAIL=false
REACT_APP_NODE_ENV=development

# Optional: Email settings for custom branding
REACT_APP_EMAIL_FROM_NAME="ProjectForge"
REACT_APP_EMAIL_DOMAIN=your-domain.com