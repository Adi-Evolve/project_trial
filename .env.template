# Environment Configuration for Supabase

# Copy this file to .env and fill in your actual Supabase credentials
# You can get these from your Supabase project settings

# Supabase Project URL
# Example: https://your-project-id.supabase.co
REACT_APP_SUPABASE_URL=YOUR_SUPABASE_PROJECT_URL

# Supabase Anon Key (Public Key)
# This is safe to use in client-side code
REACT_APP_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# Optional: Supabase Service Role Key (for server-side operations)
# DO NOT expose this in client-side code
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY

# Optional: Email settings for custom email templates
REACT_APP_EMAIL_FROM_NAME="ProjectForge"
REACT_APP_EMAIL_DOMAIN=your-domain.com

# Development settings
REACT_APP_NODE_ENV=development
REACT_APP_DEBUG_EMAIL=true